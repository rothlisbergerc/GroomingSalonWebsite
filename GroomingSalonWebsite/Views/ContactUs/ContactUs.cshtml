@model GroomingSalonWebsite.Models.ContactUs

@{
    ViewData["Title"] = "ContactUs";
}

<body>
    <div id="container">
        <!--Section: Contact v.2-->
    <section class="mb-4">

        <!--Section heading-->
        <div class="text-center">
            <h1 class="display-4">Contact us</h1>
        </div>

        <!--Section description-->
        <p class="text-center w-responsive mx-auto mb-5">
            Do you have any questions? Get in touch!
        </p>

        <div class="row">
            <!--Grid column-->
            <div class="col-md-9 mb-md-0 mb-5">
                <form asp-action="Add">
                    <!--<form asp-action="Add" <!--id="contact-form" name="contact-form" action="mail.php" method="POST"-->
                    <!--Grid row-->
                    <div class="row">

                        <!--Grid column-->
                        <div class="col-md-6">
                            <div class="md-form mb-0">
                                <label for="name" class="" asp-for="name">Your name</label>
                                <input type="text" id="name" name="name" class="form-control" asp-for="name">
                            </div>
                        </div>
                        <!--Grid column-->
                        <!--Grid column-->
                        <div class="col-md-6">
                            <div class="md-form mb-0">
                                <label for="email" class="" asp-for="email">Your email</label>
                                <input type="text" id="email" name="email" class="form-control" asp-for="email">
                            </div>
                        </div>
                        <!--Grid column-->

                    </div>
                    <!--Grid row-->
                    <!--Grid row-->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="md-form mb-0">
                                <label for="subject" class="" asp-for="subject">Subject</label>
                                <input type="text" id="subject" name="subject" class="form-control" asp-for="subject">
                            </div>
                        </div>
                    </div>
                    <!--Grid row-->
                    <!--Grid row-->
                    <div class="row">

                        <!--Grid column-->
                        <div class="col-md-12">

                            <div class="md-form">
                                <label for="message" asp-for="message">Message</label>
                                <textarea type="text" id="message" name="message" rows="2" class="form-control md-textarea" asp-for="message"></textarea>
                            </div>
                        </div>
                    </div>
                    <!--Grid row-->
                    <br />

                    <div id="feedback">
                        <h5><strong>How did you hear about us?</strong></h5>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="channel[]" id="checkbox1" value="nl">
                            <label for="checkbox1" class="form-check-label">Newsletter</label>
                        </div>

                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="channel[]" id="checkbox2" value="ad">
                            <label for="checkbox2" class="form-check-label">Advertisement</label>
                        </div>

                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="channel[]" id="checkbox3" value="ot">
                            <label for="checkbox3" class="form-check-label">Other</label>
                        </div>
                    </div>

                     <br />

                    <div class="text-center text-md-left">
                        <input type="submit" value="Send" class="btn btn-primary" />
                        <!--<a class="btn btn-primary" onclick="document.getElementById('contact-form').submit();">Send</a>-->
                    </div>
                </form>


                <div class="status"></div>
            </div>
            <!--Grid column-->
            <!--Grid column-->
            <div class="col-md-3 text-center">
                <ul class="list-unstyled mb-0">
                    <li>
                        <i class="fas fa-map-marker-alt fa-2x"></i>
                        <p>University Place, WA 98467, USA</p>
                    </li>

                    <li>
                        <i class="fas fa-phone mt-4 fa-2x"></i>
                        <p>(253)555-1234</p>
                    </li>

                    <li>
                        <i class="fas fa-envelope mt-4 fa-2x"></i>
                        <p>contact@SoapandSuds.com</p>
                    </li>
                </ul>
            </div>
            <!--Grid column-->
        </div>


    </section>
    </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
